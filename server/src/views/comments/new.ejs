<% include ../partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header">Add Comment to <%= campground.name %></div>
    <form class="ui form" action="/campgrounds/<%= campground._id %>/comments" method="POST">
        <div class="field">
            <label>Comment</label>
            <textarea name="comment[text]" placeholder="text"></textarea>
        </div>
        <div class="ui buttons">
          <a class="ui button" href="/campgrounds">Cancel</a>
          <div class="or"></div>
          <button class="ui primary button" type="submit">Save</button>
        </div>
    </form>
</div>

<% include ../partials/footer %>