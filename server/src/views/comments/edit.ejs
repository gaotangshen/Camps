<% include ../partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header">Edit Comment</div>
    <form class="ui form" action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
        <div class="field">
            <label>Comment</label>
            <textarea name="comment[text]"><%= comment.text %></textarea>
        </div>
        <div class="ui buttons">
          <a class="ui button" href="/campgrounds">Cancel</a>
          <div class="or"></div>
          <button class="ui primary button" type="submit">Save</button>
        </div>
    </form>
</div>

